<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textView2"
        android:layout_width="379dp"
        android:layout_height="47.09dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/frame"
        android:fontFamily="@font/datcub"
        android:hint="LOGIN"
        android:paddingLeft="20dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSelectHandle="@drawable/handles"/>

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="379dp"
        android:layout_height="47.09dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/frame"
        android:ems="10"
        android:fontFamily="@font/datcub"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="20dp"
        android:textSelectHandle="@drawable/handles"/>

    <Button
        android:id="@+id/button"
        android:layout_width="157dp"
        android:layout_height="53dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="33dp"
        android:background="#D9D9D9 "
        android:backgroundTint="#D9D9D9 "
        android:fontFamily="@font/datcub"
        android:text="SING IN"
        android:textColor="#1B1D1F "
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="282dp"
        android:layout_height="32dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/datcub"
        android:text="Useful free open-source code keeper From developers for developers"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF "
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="16.11dp" />


</androidx.constraintlayout.widget.ConstraintLayout>